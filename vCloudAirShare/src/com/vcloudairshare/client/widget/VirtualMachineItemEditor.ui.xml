<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.vcloudairshare.client.editor">


	<ui:style>
	.name {
		font-weight: bold;
		font-size: x-large;
		padding-right: 10px;
		min-width: 200px;
		width: 200px;
		display: inline-table;
	}
	
	.desc {
		font-size: medium;
		padding-left: 10px;
		padding-right: 10px;
		min-width: 250px;
		width: 250px;
		display: inline-table;
	}
	
	.checkout {
		font-size: medium;
		padding-left: 10px;
		min-width: 125px;
		width: 125px;
		display: inline-table;
	}
	
	.status {
		padding-right: 10px;
	}
	
	.container {
		min-width: 800px;
		width: 800px;
		display: inline-table;
		padding: 4px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.container}">
			<g:InlineLabel visible="false" ui:field="airId" />
			<g:InlineLabel styleName="{style.name}" ui:field="machinename" />
			<g:InlineLabel styleName="{style.desc}" ui:field="machineDesc" />
			<b:StatusLabel styleName="{style.status}" ui:field='condition' />
			<g:Button ui:field="checkout" text="Checkout" styleName="{style.checkout}"></g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 